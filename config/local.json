{
    "build": "./client-build",
    "work": "./client",
    "sass": {
        "src": "./client/styles/*.scss",
        "dest": "./client-build/styles"
    },
    "copy": {
        "src": [
            "./client/images/**/*",
            "./client/fonts/**/*"
        ],
        "dest": [
            "./client-build/images",
            "./client-build/fonts"
        ]
    },
    "server": {
        "host": "localhost",
        "port": 4000,
        "fallback": "./client-build/index.html",
        "livereload": true
    },
    "html": {
        "src": "./client/scripts/**/*.html",
        "dest": "./client-build/scripts/app/templates"
    },
    "script": {
        "src": [
            "./client/scripts/**/*.js"
        ],
        "dest": "./client-build/"
    }
}